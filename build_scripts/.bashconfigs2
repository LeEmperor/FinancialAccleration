# executables
linux_QUESTA_DIR="/mnt/c/altera/24.1std"
alias vlib="$linux_QUESTA_DIR/questa_fse/win64/vlib.exe"
alias vcom="$linux_QUESTA_DIR/questa_fse/win64/vcom.exe"
alias vlog="$linux_QUESTA_DIR/questa_fse/win64/vlog.exe"
alias vmap="$linux_QUESTA_DIR/questa_fse/win64/vmap.exe"
